{
	"compilerOptions": {
		"baseUrl": "src",
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"paths": {
			"@/app/*": ["app/*"],
			"@/pages/*": ["pages/*"],
			"@/widgets/*": ["widgets/*"],
			"@/features/*": ["features/*"],
			"@/entities/*": ["entities/*"],
			"@/shared/*": ["shared/*"]
		},
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"include": ["src"],
	"files": ["import.d.ts"]
}
